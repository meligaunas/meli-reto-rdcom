<body>
<div class="container mb-5 col-md-6">
    <div class="row  m-3">
       <div class="col-md">
        <h1 class="text-center">Agregar Pacientes</h1>

       </div> 
    </div>
    <form id="addForm">
     <div class="card container-fluid"> 
        <div class="mb-3">
          <label for="nombre" class="form-label">Nombre del paciente</label>
          <input type="text" class="form-control" id="nombre" aria-describedby="emailHelp">
          
        </div>
        <div class="mb-3 ">
          <label for="apellido" class="form-label">Apellido</label>
          <input type="text" class="form-control" id="apellido">
        </div>
        <div class="mb-3 ">
            <label for="edad" class="form-label">Edad</label>
            <input type="number" class="form-control" id="edad" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text"></div>
          </div>
          <div class="mb-3">
            <label for="patologia" class="form-label">Patología</label>
            <input type="text" class="form-control" id="patologia">
          </div>
          <div class="mb-3">
            <label for="status" class="form-label">Status</label>
            <input type="text" class="form-control" id="status">
          </div>
        
           
           <button type="submit" class="btn btn-primary mb-3">Enviar</button>
        </div>
    </form>

             <div class="panel panel-default">
                <div>
                   <h4 class="text-center">Pacientes</h4>
                   <ol id="listPatient" class="list-group"> 
                        
    
                   </ol>  
           
        </div>    
    </div>
    
</div>

